---
import QuestionsView from "../components/QuestionsView";
import Layout from "../layouts/Layout.astro";
import { readProductsTransformed, readQuestions } from "../util/provider";
// export const prerender = true

const questions = await readQuestions();
const products = await readProductsTransformed();

const url = Astro.url;
---

<Layout title="Guía de Selección">
	<QuestionsView
		filters={questions}
		products={products}
		initialUrl={url}
		client:load
	/>
</Layout>
